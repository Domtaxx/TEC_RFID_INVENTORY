<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Department Spinner -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Department" />

    <Spinner
        android:id="@+id/department_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp" />

    <!-- Employee Spinner -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Employee" />

    <Spinner
        android:id="@+id/employee_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp" />

    <!-- Room Spinner -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Room" />

    <Spinner
        android:id="@+id/room_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp" />

    <!-- Button for Report 1 -->
    <Button
        android:id="@+id/report1_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Report 1" />

    <!-- Button for Report 2 -->
    <Button
        android:id="@+id/report2_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Report 2" />

    <!-- Button for Report 3 -->
    <Button
        android:id="@+id/report3_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Report 3" />

</LinearLayout>
